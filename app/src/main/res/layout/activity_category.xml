<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0E2">

    <!-- Navigation Menu -->
    <LinearLayout
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA0BC"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="Menu"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="ADD CATEGORY"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Logo (Centered) -->

    <!-- Title: Add Category -->

    <!-- Category Name Input -->

    <!-- Category Amount Input (Additional field from MoneyTrees layout) -->

    <!-- Save Category Button -->

    <EditText
        android:id="@+id/et_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FF69B4"
        android:hint="Enter Category Name"
        android:padding="12dp"
        android:textColorHint="#FF69B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_menu" />

    <EditText
        android:id="@+id/et_category_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FF69B4"
        android:hint="Enter Category Amount (Rands)"
        android:padding="12dp"
        android:textColorHint="#FF69B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_category_name" />

    <Button
        android:id="@+id/btn_save_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FF69B4"
        android:text="Save Category"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_category_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>
