<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe0e2"
    tools:context=".ui.MainActivity">

    <!-- Navigation Menu -->
    <LinearLayout
        android:id="@+id/navigation_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFA0BC"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu"
            android:clickable="true" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WELCOME"
            android:textAlignment="center"
            android:textColor="#FFFEFE"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Spending Goal Visual Bar Section -->
    <TextView
        android:id="@+id/goal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spending Goal Progress (Past Month)"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/navigation_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Goal Bar Container Section -->
    <LinearLayout
        android:id="@+id/goal_bar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/goal_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Goal Bar with Min/Max Markers -->
        <RelativeLayout
            android:id="@+id/goal_bar_wrapper"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#DDD">

            <View
                android:id="@+id/goal_progress_fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#7ad76c"/>

            <View
                android:id="@+id/min_goal_marker"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#2196F3"
                android:visibility="invisible"/>

            <View
                android:id="@+id/max_goal_marker"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"/>
        </RelativeLayout>

        <!-- Min, Max, YOU markers with values -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_goal_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min: R0.00"
                android:textColor="#2196F3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goal_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Max: R0.00"
                android:textColor="#F44336"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/current_indicator_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_goal_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You: R0.00"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Row: Spent and Remaining -->
    <LinearLayout
        android:id="@+id/spent_remaining_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/goal_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_budget_spent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spent: R0.00"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#2E7D32"/>

        <TextView
            android:id="@+id/tv_budget_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Remaining: R0.00"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#D84315"/>
    </LinearLayout>

    <!-- Total Expenses -->
    <TextView
        android:id="@+id/tvTotalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total Expenses: R0.00"
        android:textColor="#FF4081"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spent_remaining_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Recent Activity Title -->
    <TextView
        android:id="@+id/recent_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Recent Transactions"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTotalExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for Recent Activity -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent_activity_recycler"
        android:layout_width="442dp"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Recent transactions list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recent_activity_title" />

    <TextView
        android:id="@+id/empty_recent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No recent activity"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/recent_activity_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Budget Summary Cards Row -->

    <!-- Bottom Button Container (if needed for FABs etc) -->

    <LinearLayout
        android:id="@+id/budget_summary_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/empty_recent_activity">

        <TextView
            android:id="@+id/budget_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#ff79a3"
            android:gravity="center"
            android:padding="8dp"
            android:text="Budget Type\nNo Budget Set"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#ff79a3"
            android:gravity="center"
            android:padding="8dp"
            android:text="Total Budget\nR0.00"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/savings_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff79a3"
            android:gravity="center"
            android:padding="8dp"
            android:text="Daily Average\nR0.00"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>